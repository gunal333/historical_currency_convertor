<%- include('./includes/head.ejs')%>
</head>
<body class="aa">
<%- include('./includes/nav.ejs')%>

    


    <div class="container">
        <div class="row align-items-start">
            <div class="col">
                <main class="form-signin mt-5 text-center container border border-5">
                    <form action="/" method="POST">
                        <h1 class="h3 mb-3 mt-2 fw-normal">Currency Converter</h1>
                        <div class="form-floating mb-2">
                            <select class="form-control" name='from' id="floatingInput" required>
                                <%- include('./includes/countryList.ejs')%>
                            </select>
                            <label for="floatingInput">From:</label>
                        </div>
                        <div class="form-floating mb-2">
                            <select class="form-control" name='to' id="floatingInput" required>
                                <%- include('./includes/countryList.ejs')%>
                            </select>
                            <label for="floatingInput">To:</label>
                        </div>
                        <div class="form-floating mb-2">
                            <input type="number" name="val" min="1" class="form-control" required id="floatingInput" placeholder="name@example.com">
                            <label for="floatingInput">Value:</label>
                        </div>
                        <div class="mb-2">
                            <label for="date">Select Date:</label>
                            <input type="date" id="date" name="date" required>
                        </div>
                        <button class="w-100 mb-3 btn btn-lg btn-primary" type="submit">Convert</button>
                    </form>

                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Date</th>
                                <th><%= from%></th>
                                <th><%= to%></th>
                            </tr>
                            <tr>
                                <td><%= date%></td>
                                <td><%= froVal%></td>
                                <td><%= toVal%></td>
                            </tr>
                        </tbody>
                    </table>
                  
                </main>
            </div>
            <div class="col text-center">
                <h1 class="h3 mb-3 mt-2 fw-normal">Graph</h1>
            </div>
        </div>
    </div>
    <%- include('./includes/end.ejs')%>



    